{% extends 'base.html.twig' %}

{% block title %}Hello StarterController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


    Choisis ton premier pokemon!
    Souhaites-tu:
    <ul>
    {% for starter in starter %}
        <li>
            <td>{{ starter.Name }}:</td>
            <ul>
            {% if starter.Type == 1 %}
                <td>    Type: FEU </td>
            {% elseif starter.Type == 2 %}
                <td> Type: EAU </td>
            {% elseif starter.Type == 3 %}
                    <td>Type: PLANTE</td>
            {% elseif starter.Type == 4 %}
                <td></td>
            </ul>
            {% for Attacc in starter.Attacc %}
            <ul>
                <td>Attaque : {{ Attacc.Name }} </td>
            </ul>
            {% endfor %}
        </li>

    {% endfor %}
    </ul>
</div>
{% endblock %}
